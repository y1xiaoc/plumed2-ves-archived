# vim:ft=plumed

arg1: READ FILE=arg.in VALUES=arg IGNORE_TIME

BF_LAGUERRE ...
 ORDER=20
 INTERVAL_MIN=0.0
 INTERVAL_MAX=120.0
 LABEL=bf
 DEBUG_INFO
... BF_LAGUERRE

bf_t1: UNIFORM MINIMA=0.0 MAXIMA=120.0
bf_t2: GAUSSIAN CENTER1=10.0 SIGMA1=2.0
bf_t3: GAUSSIAN CENTER1=20.0 SIGMA1=1.0

DUMP_BASISFUNCTIONS ...
 BASIS_SET=bf
 GRID_BINS=300
 TARGET_DISTRIBUTION1=bf_t1
 TARGET_DISTRIBUTION2=bf_t2
 TARGET_DISTRIBUTION3=bf_t3
 FORMAT_VALUES_DERIVS=%13.6f
 FORMAT_TARGETDIST_AVERAGES=%13.6f
... DUMP_BASISFUNCTIONS

DUMP_BASISFUNCTIONS ...
 BASIS_SET=bf
 GRID_BINS=300
 FORMAT_VALUES_DERIVS=%13.5f
